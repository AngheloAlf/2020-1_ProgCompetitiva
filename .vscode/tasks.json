{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "gcc build active file",
			"command": "gcc",
			"args": [
				"-std=c11",
				"-Wall",
				"-Wextra",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}",
				"-lm"
			],
			"options": {
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "g++ build active file",
			"command": "g++",
			"args": [
				"-std=c++17",
				"-Wall",
				"-Wextra",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}"
			],
			"options": {
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}